<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <EditText
        android:id="@+id/mTalkContentEdt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_activity_padding_8"
        android:background="@drawable/round_white_bg"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="5"
        android:padding="@dimen/common_activity_padding_8" />

    <com.handmark.pulltorefresh.PullToRefreshGridView
        android:id="@id/generalPullToRefreshGridView"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/common_activity_padding_8"
        android:horizontalSpacing="2dip"
        android:numColumns="3"
        android:verticalSpacing="2dip" />
</LinearLayout>
