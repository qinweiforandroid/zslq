<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_toolbar" />

    <ImageView
        android:id="@+id/mSellerIconImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/common_activity_padding_8"
        android:layout_marginRight="@dimen/common_activity_padding_8"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/mSellerTitleLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/common_activity_padding_8"
        android:layout_marginRight="@dimen/common_activity_padding_8"
        android:layout_marginTop="16dp"
        android:text="title"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/mSellerDescriptorLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:lineSpacingExtra="2dp"
        android:layout_marginLeft="@dimen/common_activity_padding_8"
        android:layout_marginRight="@dimen/common_activity_padding_8"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/white"
        android:padding="@dimen/common_activity_padding_8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ:" />

        <TextView
            android:id="@+id/mSellerQQLabel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="435231045" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系我"/>
    </LinearLayout>
</LinearLayout>
