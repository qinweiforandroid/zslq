<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <cn.wei.library.widget.viewpager.LoopViewPager
            android:id="@+id/mServiceLoopViewPager"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <cn.wei.library.widget.indicator.CirclePageIndicator
            android:id="@+id/mCirclePageIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:padding="8dp"
            app:fillColor="@color/colorAccent"
            app:pageColor="@color/white"
            app:radius="4dp"
            app:strokeWidth="0dp" />
    </FrameLayout>

    <cn.wei.library.widget.card.CardGroupView
        android:id="@+id/mServiceCardGroupView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_activity_padding_8" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_activity_padding_8"
        android:background="@color/white"
        android:padding="@dimen/common_activity_padding_16"
        android:text="热门商家" />
</LinearLayout>
