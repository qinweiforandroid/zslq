<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ebebeb"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/tt_new_msg_tip"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:background="@drawable/tt_new_msg_bk"
            android:gravity="center_vertical|left"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:text="新消息"
            android:textColor="#01aff4"
            android:visibility="gone" />

    </FrameLayout>


    <cn.wei.zslq.widget.ChatPlugin
        android:id="@+id/mChatPlugin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></cn.wei.zslq.widget.ChatPlugin>
</LinearLayout>