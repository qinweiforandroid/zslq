    </style>

    <style name="InputTextName_black">
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/black_04</item>
    </style>







    <style name="DialogActivity" parent="android:style/Theme.Dialog">
        <!-- 是否浮动在activity上-->
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--<item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!-- 背景昏暗是否启用 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- dialog背景1 -->
        <item name="android:windowBackground">@color/transparent</item>
        <!-- dialog背景2 -->
        <item name="android:background">@color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 背景昏暗是否启用 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- dialog背景1 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- dialog背景2 -->
        <!-- <item name="android:background">@anim/list_single_selector</item> -->
    </style>

    <style name="DialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>


