<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mGroupViewTitleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mGroupViewTitleLabel"
            android:paddingTop="@dimen/common_activity_padding_8"
            android:paddingBottom="@dimen/common_activity_padding_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/widget_general_row_lable_margin_left"
            android:textSize="@dimen/text_size_12"
            android:text="标题"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mGroupViewContainer"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    </LinearLayout>
</LinearLayout>