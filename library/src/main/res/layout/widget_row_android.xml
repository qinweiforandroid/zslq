<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <ImageView
        android:id="@+id/mWidgetRowIconImg"
        android:layout_width="@dimen/widget_general_row_icon_size_width"
        android:layout_height="@dimen/widget_general_row_icon_size_height"
        android:layout_marginLeft="@dimen/common_activity_padding_8" />

    <TextView
        android:id="@+id/mWidgetRowLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_activity_padding_16"
        android:layout_weight="1.0"
        android:textColor="@color/black_04"
        android:textSize="@dimen/text_size_16" />

    <ImageView
        android:id="@+id/mWidgetRowActionImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />
</merge>