<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/widgets_general_row_select"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/common_activity_padding_8"
    android:paddingLeft="@dimen/common_activity_padding_16"
    android:paddingRight="@dimen/common_activity_padding_8"
    android:paddingTop="@dimen/common_activity_padding_8">

    <ImageView
        android:id="@+id/mWidgetRowIconImg"
        android:layout_width="@dimen/widget_general_row_icon_size_width"
        android:layout_height="@dimen/widget_general_row_icon_size_height"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/common_activity_padding_8" />

    <TextView
        android:id="@+id/mWidgetRowLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/mWidgetRowIconImg"
        android:layout_weight="1"
        android:text="姓名" />


    <ImageView
        android:id="@+id/mUserIconImg"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="@dimen/common_activity_padding_8"
        android:src="@drawable/ic_launcher" />

    <ImageView
        android:id="@+id/mWidgetRowActionImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/action_row" />
</LinearLayout>